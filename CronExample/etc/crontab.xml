<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="codelegacy">
        <job name="sample_task" instance="Codelegacy\CronExample\Cron\SampleTask" method="execute">
            <schedule>* * * * *</schedule>
        </job>
    </group>
    <group id="default">
        <job name="sample_task_run_by_config_value" instance="Codelegacy\CronExample\Cron\SampleByConfigTask" method="execute">
            <config_path>codelegacy/cron/task_condition</config_path>
        </job>
    </group>
</config>